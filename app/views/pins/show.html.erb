<div class="row">
  <div class="col-md-offset-2 col-md-auto">
    <div class="panel panel-default">
      <div class="panel-heading center">
        <%= link_to @pin.image.url(:original), :target => "_blank" do %>
          <%= image_tag @pin.image.url(:large) %>
        <% end %>
      </div>
      <div class="panel-body">
        <p><strong><%= @pin.description %></strong></p>
        <p><%= @pin.user.name if @pin.user %></p>
        <p><%= time_ago_in_words(@pin.created_at, include_seconds: true) %> ago</p>
      </div>
      <div class="panel-footer">
        <div style="float: left;">
          <%= link_to pins_path do %>
            <span class="glyphicon glyphicon-chevron-left"></span>  Back
          <% end %>
          <%= link_to @pin.image.url(:original), :target => "_blank" do %>
            <span class="glyphicon glyphicon-zoom-in"></span>  View Original
          <% end %>
        </div>
        <% if current_user && @pin.user == current_user %>
          <div align="right">
            <%= link_to edit_pin_path(@pin) do %>
              <span class="glyphicon glyphicon-edit"></span>  Edit
            <% end %>
            <%= link_to @pin, method: :delete, data: { confirm: 'Are you sure you want to delete this IMG?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
          </div>
        <% else %>
          <div align="right">
            </br>
          </div>  
        <% end %>
      </div>
    </div>
  </div>
</div>